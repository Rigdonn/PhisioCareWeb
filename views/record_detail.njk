{% extends "base.njk" %}

{% block titulo %}Record | Detail{% endblock %}

{% block contenido %}
    <h1>{{ record.patient.name }}'s record file</h1>
    <div>
        <h2>Patient's information</h2>
        <p><strong>Patient's name:</strong> {{ record.patient.name }}</p>
        <p><strong>Patient's surname:</strong> {{ record.patient.surname }}</p>
        <p><strong>Patient's birthdate:</strong> {{ record.patient.birthDate }}</p>
        <p><strong>Patient's address:</strong> {{ record.patient.address }}</p>
        <p><strong>Patient's insurance number:</strong> {{ record.patient.insuranceNumber }}</p>
        <p><strong>Patient's medical record:</strong> {{ record.medicalRecord }}</p>
        <h3>Appointments</h3>
        <table class="table table-striped table-bordered" width="100%">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Physio</th>
                    <th>Diagnosis</th>
                    <th>Treatment</th>
                    <th>Observations</th>
                </tr>
            </thead>
            <tbody>
                {% for appointment in record.appointments %}
                    <tr>
                        <td>{{ appointment.date }}</td>
                        <td>{{ appointment.physio.name }} ({{ appointment.physio.specialty }})</td>
                        <td>{{ appointment.diagnosis }}</td>
                        <td>{{ appointment.treatment }}</td>
                        <td>{{ appointment.observations }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center">No appointments available.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
