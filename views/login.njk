{% extends "base.njk" %}

{% block titulo %}Login{% endblock %}

{% block contenido %}
    <h1>Login</h1>
    {% if errores.generic %}
        <p class="alert alert-danger">{{ errores.generic }}</p>
    {% endif %}
    <form action="/auth/login" method="POST">
        <div class="form-group">
            <label for="login">Username:</label>
            {% if errores.login %}
                <p class="text-danger">{{ errores.login }}</p>
            {% endif %}
            <input type="text" class="form-control" name="login" placeholder="Enter username..." value="{{ data.login }}">
        </div>
        <div class="form-group">
            <label for="password">Password:</label>
            {% if errores.password %}
                <p class="text-danger">{{ errores.password }}</p>
            {% endif %}
            <input type="password" class="form-control" name="password" placeholder="Enter password...">
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
    </form>
{% endblock %}
