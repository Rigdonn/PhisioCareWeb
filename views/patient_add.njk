{% extends "base.njk" %}

{% block titulo %}Patient | New{% endblock %}

{% block contenido %}
    {% if unauthorized %}
        <div class="alert alert-danger">
            <strong>Access Denied!</strong> You are not authorized to view this page.
        </div>
    {% else %}
        <h1>New Patient</h1>
        {% if errores.generic %}
            <p class="alert alert-danger">{{ errores.generic }}</p>
        {% endif %}
        <form action="/patients" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="login">Login Username:</label>
                {% if errores.login %}
                    <p class="text-danger">{{ errores.login }}</p>
                {% endif %}
                <input type="text" class="form-control" name="login" placeholder="Patient's login..." value="{{ data.login }}">
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                {% if errores.password %}
                    <p class="text-danger">{{ errores.password }}</p>
                {% endif %}
                <input type="password" class="form-control" name="password" placeholder="Patient's password..." value="{{ data.password }}">
            </div>
            <div class="form-group">
                <label for="name">Name:</label>
                {% if errores.name %}
                    <p class="text-danger">{{ errores.name }}</p>
                {% endif %}
                <input type="text" class="form-control" name="name" placeholder="Patient's name..." value="{{ data.name }}">
            </div>
            <div class="form-group">
                <label for="surname">Surname:</label>
                {% if errores.surname %}
                    <p class="text-danger">{{ errores.surname }}</p>
                {% endif %}
                <input type="text" class="form-control" name="surname" placeholder="Patient's surname..." value="{{ data.surname }}">
            </div>
            <div class="form-group">
                <label for="birthDate">Birth Date:</label>
                {% if errores.birthDate %}
                    <p class="text-danger">{{ errores.birthDate }}</p>
                {% endif %}
                <input type="date" class="form-control" name="birthDate" value="{{ data.birthDate }}">
            </div>
            <div class="form-group">
                <label for="address">Address:</label>
                {% if errores.address %}
                    <p class="text-danger">{{ errores.address }}</p>
                {% endif %}
                <input type="text" class="form-control" name="address" value="{{ data.address }}">
            </div>
            <div class="form-group">
                <label for="insuranceNumber">Insurance Number:</label>
                {% if errores.insuranceNumber %}
                    <p class="text-danger">{{ errores.insuranceNumber }}</p>
                {% endif %}
                <input type="text" class="form-control" name="insuranceNumber" value="{{ data.insuranceNumber }}">
            </div>
            <div class="form-group">
                <label for="image">Profile image:</label>
                <input type="file" class="form-control" name="image" value="{{ data.image }}">
            </div>
            <button type="submit" class="btn btn-primary">Send</button>
        </form>
    {% endif %}
{% endblock %}
